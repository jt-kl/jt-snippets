  "python.testing.pytestArgs": [],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  "python.defaultInterpreterPath": ".env/bin/python3",
  "python.terminal.activateEnvironment": true,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
