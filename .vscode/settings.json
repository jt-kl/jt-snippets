{
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.organizeImports": true
  },
  "editor.fontSize": 12,
  "editor.formatOnSaveMode": "file",
  "editor.formatOnSave": true,
  "editor.tabSize": 4,
  "editor.minimap.maxColumn": 60,
  "editor.defaultFormatter": null,
  "[python]": {
    "editor.formatOnSave": true,
    "editor.rulers": [79, 119],
